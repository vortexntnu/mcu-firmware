#ifndef SRC_EFM32_H_
#define SRC_EFM32_H_

#define CMU_HFPERCLKDIV	((volatile uint32_t*)(CMU_BASE + 0x008))

#define CMU_HFPERCLKEN (1 << 8)
#define CMU_HFPERCLKDIV512 (9 << 0)

#define TIMER0_CTRL 	((volatile uint32_t*)(TIMER0_BASE + 0x00))
#define TIMER0_CMD  	((volatile uint32_t*)(TIMER0_BASE + 0x04))
#define TIMER0_STATUS  	((volatile uint32_t*)(TIMER0_BASE + 0x08))
#define TIMER0_IEN  	((volatile uint32_t*)(TIMER0_BASE + 0x00C))
#define TIMER0_CNT  	((volatile uint32_t*)(TIMER0_BASE + 0x024))

#define TIMERn_PRESCHFPERCLK (1 << 16)
#define TIMERn_PRESC_DIV1024 (10 << 24)

#define TIMERn_CMD_START (1 << 0)
#define TIMERn_CMD_STOP  (1 << 1)



#endif /* SRC_EFM32_H_ */
